{
  "productName": "rpg-desktop",
  "version": "1.1.0-dev",
  "identifier": "com.rpg.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
